apiVersion: kpt.dev/v1
kind: Kptfile
metadata:
  name: cert-manager
upstream:
  type: git
  git:
    repo: https://github.com/cert-manager/cert-manager
    directory: /deploy/crds
    ref: main
  updateStrategy: resource-merge
upstreamLock:
  type: git
  git:
    repo: https://github.com/cert-manager/cert-manager
    directory: /deploy/crds
    ref: main
    commit: main
